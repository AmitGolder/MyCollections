@model List<MyCollections.Models.Car>

<h2 class="title">Cars</h2>

<table class="car-table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Year</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Name</td>
                <td>@car.Brand.Name</td>
                <td>@car.Year</td>
                <td>
                    <a href="@Url.Action("EditCar", "Admin", new { id = car.Id })" class="action-btn">Edit</a>
                    <form asp-action="DeleteCar" asp-controller="Admin" method="post" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="id" value="@car.Id" />
                        <button type="submit" class="action-btn">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("AddCar", "Admin")" class="add-btn">+ ADD</a>

<style>
    body {
        font-family: Arial, sans-serif;
        background: radial-gradient(circle, black, yellow);
        color: white;
        text-align: center;
        padding: 20px;
    }

    .title {
        font-size: 28px;
        margin: 80px 0 20px 0; /* Increased top margin */
        text-transform: uppercase;
        letter-spacing: 2px;
    }

    .car-table {
        width: 80%;
        margin: auto;
        border-collapse: collapse;
        background: rgba(255, 255, 255, 0.1);
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

        .car-table th, .car-table td {
            padding: 12px;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .car-table th {
            background: rgba(255, 255, 255, 0.2);
            text-transform: uppercase;
        }

        .car-table tr:nth-child(even) {
            background: rgba(255, 255, 255, 0.05);
        }

        .car-table tr:hover {
            background: rgba(255, 255, 255, 0.2);
        }

    .action-btn {
        background: #ffcc00;
        padding: 6px 12px;
        border-radius: 5px;
        text-decoration: none;
        color: black;
        font-weight: bold;
        transition: 0.3s;
    }

        .action-btn:hover {
            background: white;
            color: black;
        }

    .add-btn {
        display: inline-block;
        margin-top: 20px;
        padding: 12px 20px;
        background: yellow;
        color: black;
        text-decoration: none;
        font-size: 18px;
        font-weight: bold;
        border-radius: 5px;
        transition: 0.3s;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
    }

        .add-btn:hover {
            background: white;
            color: black;
        }
</style>
