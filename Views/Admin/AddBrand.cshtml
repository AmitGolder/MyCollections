@model MyCollections.Models.Brand

<h2>Add New Brand</h2>

<form asp-action="AddBrand" asp-controller="Admin" method="post">
    <label for="Name">Brand Name:</label>
    <input type="text" asp-for="Name" required />

    <label for="Country">Country:</label>
    <input type="text" asp-for="Country" required />

    <button type="submit">Add Brand</button>
</form>

<a href="@Url.Action("BrandsList", "Admin")">Back to List</a>
