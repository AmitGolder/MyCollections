@model List<MyCollections.Models.Car>

@{
    ViewData["Title"] = "All Collections";
}

<div class="card-container">
    @foreach (var car in Model)
    {
        <a href="@Url.Action("Details", "Cars", new { id = car.Id })" class="card">
            <img src="@car.ImagePath" alt="@car.Name">
        </a>
    }
</div>

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px; /* Equal spacing between cards */
        justify-content: center;
        padding: 20px;
    }

    .card {
        width: 150px;
        height: 150px;
        border-radius: 10px;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        background: white;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.2s;
        margin: 10px; /* Equal margin on all sides */
    }

        .card:hover {
            transform: scale(1.05);
        }

        .card img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ensures proper fitting without stretching */
        }

</style>
