@model MyCollections.Models.Car

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Name - Details</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        .details-container {
            width: 30%; /* Adjust to a smaller width */
            margin: 50px auto; /* Added margin-top and margin-bottom for spacing */
            background: rgba(255, 255, 255, 0.15); /* Subtle white glow */
            padding: 15px; /* Reduce padding */
            border-radius: 10px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }



            .details-container img {
                max-width: 80%; /* Adjust to the desired width */
                max-height: 400px; /* Adjust to the desired height */
                width: auto; /* Maintains aspect ratio */
                height: auto; /* Maintains aspect ratio */
                display: block;
                margin: 0 auto; /* Centers the image */
                border-radius: 5px; /* Reduced border radius */
                box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1); /* More subtle shadow */
            }

    </style>
</head>
<body>
    <div class="details-container">
        <h1>@Model.Name</h1>
        <img src="@Model.ImagePath" alt="@Model.Name">
        <p><strong>Brand:</strong> @(Model.Brand?.Name ?? "Unknown")</p>
        <p><strong>Year:</strong> @Model.Year</p>
        <a href="@Url.Action("Index", "Home")">Back to Home</a>
    </div>
</body>
</html>
